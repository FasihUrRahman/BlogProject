@model Blog.Models.Post;
@{
    ViewData["Title"] = "Add or Edit Role";

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <form asp-action="AddEditPost">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Post Title</label>
                    <input asp-for="Title" type="text" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Categories</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.AllCategories" class="form-control"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Image</label>
                    <input asp-for="Image" type="text" class="form-control">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ShortDescription" class="form-label">Short Description</label>
                    <input asp-for="ShortDescription" type="text" class="form-control">
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Detailed Description</label>
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="User.Name" class="form-label">Author</label>
                    <input asp-for="User.Name" type="text" class="form-control" disabled>
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PostStatus" class="form-label">Post Status</label>
                    <input asp-for="PostStatus.Name" type="text" class="form-control">
                    <span asp-validation-for="PostStatus" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <p class="text-danger">@ViewBag.Error</p>
                }
                <button type="submit" class="mt-3 btn btn-primary">Add / Update</button> <a class="mt-3 btn btn-danger" asp-action="Categories" asp-controller="Post">Back</a>
            </form>
        </div>
    </div>

</div>






@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}