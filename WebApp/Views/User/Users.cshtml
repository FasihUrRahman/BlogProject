@model IEnumerable<Blog.Models.User>

@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <a class="btn btn-info" asp-action="AddEditUser" asp-controller="User">Create New</a>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email Address</th>
                            <th scope="col">Password</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Active</th>
                            <th scope="col">Joined On</th>
                            <th scope="col">User Role</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelitem=> item.Id)</td>
                                <td>@Html.DisplayFor(modelitem=> item.Name)</td>
                                <td>@Html.DisplayFor(modelitem=> item.EmailAddress)</td>
                                <td>@Html.DisplayFor(modelitem=> item.Password)</td>
                                <td>@Html.DisplayFor(modelitem=> item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelitem=> item.IsConfirmed)</td>
                                <td>@Html.DisplayFor(modelitem=> item.JoinedOn)</td>
                                <td>@Html.DisplayFor(modelitem=> item.UserRole.Name)</td>
                                <td><a asp-action="AddEditUser" asp-controller="User" asp-route-Id="@item.Id">Edit</a> | <a asp-action="DeleteUser" asp-controller="User" asp-route-Id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
